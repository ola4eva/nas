<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_form_hr_payslip_inherit" model="ir.ui.view">
        <field name="name">hr.payslip.form.inherit.staffid</field>
        <field name="model">hr.payslip</field>
        <field name="inherit_id" ref="hr_payroll.view_hr_payslip_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='employee_id']" position="after">
                <field name="staff_id" readonly="1"/>
            </xpath>
        </field>
    </record>

    <record id="view_hr_payslip_filter_inherit" model="ir.ui.view">
        <field name="name">hr.payslip.search.inherit.staffid</field>
        <field name="model">hr.payslip</field>
        <field name="inherit_id" ref="hr_payroll.view_hr_payslip_filter"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='employee_id']" position="after">
                <field name="staff_id" string="Staff ID"/>
            </xpath>
        </field>
    </record>

    <record id="action_export_payslip_excel" model="ir.actions.server">
        <field name="name">Export Payslip Excel</field>
        <field name="model_id" ref="hr_payroll.model_hr_payslip"/>
        <field name="binding_model_id" ref="hr_payroll.model_hr_payslip"/>
        <field name="state">code</field>
        <field name="binding_type">action</field>
        <field name="code">
            action = {{
                'type': 'ir.actions.act_url',
                'url': '/export/payslip/excel?ids=' + ','.join(map(str, record.ids)),
                'target': 'self',
            }}
        </field>
    </record>
</odoo>
