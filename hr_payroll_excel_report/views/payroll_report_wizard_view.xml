<odoo>
  <record id="view_payroll_report_wizard" model="ir.ui.view">
    <field name="name">Payroll Report Wizard</field>
    <field name="model">payroll.report.wizard</field>
    <field name="arch" type="xml">
      <form string="Payroll Report">
        <group>
          <field name="date_from"/>
          <field name="date_to"/>
        </group>
        <footer>
          <button name="generate_excel_report" string="Generate Excel" type="object" class="btn-primary"/>
          <button string="Cancel" class="btn-secondary" special="cancel"/>
        </footer>
      </form>
    </field>
  </record>

  <record id="action_payroll_report_wizard" model="ir.actions.act_window">
    <field name="name">Payroll Excel Report</field>
    <field name="res_model">payroll.report.wizard</field>
    <field name="view_mode">form</field>
    <field name="target">new</field>
  </record>

  <menuitem id="menu_payroll_excel_report"
            name="Payroll Excel Report"
            parent="hr_payroll.menu_hr_payroll_reporting"
            action="action_payroll_report_wizard"/>
</odoo>