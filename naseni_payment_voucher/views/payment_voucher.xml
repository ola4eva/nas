<odoo>
    <data>


        <record id="paperformat_payment_voucher" model="report.paperformat">
            <field name="name">Payment Voucher Format</field>
            <field name="format">A4</field>
            <field name="orientation">Portrait</field>
            <field name="margin_top">10</field>
            <field name="margin_bottom">10</field>
            <field name="margin_left">5</field>
            <field name="margin_right">5</field>
        </record>


        <template id="report_payment_voucher_invoice_document">
            <t t-out="0" />
            <style>
                .page {
                font-family: Arial, sans-serif;
                font-size: 12px;
                }

                .header {
                display: flex;
                justify-content: space-between;
                align-items: center;
                margin-bottom: 20px;
                }

                .header-left {
                width: 30%;
                }

                .header-right {
                width: 70%;
                text-align: right;
                }

                .header-right p {
                margin: 0;
                }

                .main-content {
                border: 1px solid black;
                padding: 10px;
                }

                .voucher-info {
                display: flex;
                justify-content: space-between;
                margin-bottom: 10px;
                }

                .info-item {
                width: 30%;
                }

                .table {
                width: 100%;
                border-collapse: collapse;
                }

                .table, .table th, .table td {
                border: 1px solid black;
                padding: 5px;
                }

                .table th {
                text-align: left;
                }

                .amount-in-words {
                margin-top: 10px;
                }

                .total {
                text-align: right;
                margin-top: 10px;
                }

                .certification {
                margin-top: 20px;
                text-align: center;
                }

                .footer {
                display: flex;
                justify-content: space-between;
                margin-top: 30px;
                }

                .footer-left {
                width: 30%;
                }

                .footer-right {
                width: 70%;
                }

                .signature-line {
                display: flex;
                justify-content: space-between;
                margin-bottom: 5px;
                }

                .signature-line strong {
                width: 40%;
                }

                .signature-line span {
                width: 60%;
                border-bottom: 1px solid black;
                padding-bottom: 3px;
                }
            </style>

            <t t-out="0" />
            <div class="page">
                <div class="header">
                    <div class="header-left">
                        <img src="/your_module/static/img/naseni_logo.png" alt="NASENI Logo"
                            height="100" />
                    </div>
                    <div class="header-right">
                        <p>Idu Industrial Layout, PMB 391, Garki Abuja</p>
                        <p>nasenihq@naseni.org www.naseni.gov.ng</p>
                        <p>NATIONAL AGENCY FOR SCIENCE AND</p>
                        <p>ENGINEERING INFRASTRUCTURE</p>
                        <p>THE PRESIDENCY</p>
                    </div>
                </div>

                <div class="main-content">
                    <h1 style="text-align: center;">PAYMENT VOUCHER</h1>

                    <div class="voucher-info">
                        <div class="info-item">
                            <strong>P.V NO:</strong>
                            <span t-field="o.name" />
                        </div>
                        <div class="info-item">
                            <strong>DATE:</strong>
                            <span t-field="o.invoice_date" />
                        </div>
                        <div class="info-item">
                            <strong>BL NO:</strong>
                            <span t-field="o.ref" />
                        </div>
                    </div>

                    <table class="table">
                        <thead>
                            <tr>
                                <th>Date</th>
                                <th>Description Of Payment</th>
                                <th>Debit</th>
                                <th>Credit</th>
                                <th>Amount</th>
                                <th>K</th>
                            </tr>
                        </thead>
                        <tbody>
                            <t t-foreach="o.invoice_line_ids" t-as="line">
                                <tr>
                                    <td>
                                        <span t-field="line.date" />
                                    </td>
                                    <td>
                                        <span t-field="line.name" />
                                    </td>
                                    <td>
                                        <t t-if="line.debit > 0">
                                            <span t-esc="line.debit" />
                                        </t>
                                    </td>
                                    <td>
                                        <t t-if="line.credit > 0">
                                            <span t-esc="line.credit" />
                                        </t>
                                    </td>
                                    <td>
                                        <span t-field="line.price_subtotal" />
                                    </td>
                                    <td></td>
                                </tr>
                            </t>
                        </tbody>
                    </table>

                    <div class="amount-in-words">
                        <strong>Amount in words:</strong>
                        <!-- <span t-esc="o.amount_to_text(o.amount_total)" /> -->
                    </div>

                    <div class="total">
                        <strong>TOTAL</strong>
                        <span t-field="o.amount_total" />
                    </div>
                </div>

                <div class="certification">
                    <strong>CERTIFICATION:</strong> I Certify that the basis of this payment is true
                    and correct, and in the best interest of the Agency. </div>

                <div class="footer">
                    <div class="footer-left">
                        <strong>File No:</strong>
                        <span t-field="o.payment_reference" />
                    </div>
                    <div class="footer-right">
                        <div class="signature-line">
                            <strong>Prepared by:</strong>
                            <span t-field="o.user_id" />
                            <strong>Date:</strong>
                            <span t-field="o.date" />
                        </div>
                        <div class="signature-line">
                            <strong>Recorded in Vote Book:</strong>
                            <span></span>
                            <strong>Date:</strong>
                            <span></span>
                        </div>
                        <div class="signature-line">
                            <strong>Internal Audit:</strong>
                            <span></span>
                            <strong>Date:</strong>
                            <span></span>
                        </div>
                        <div class="signature-line">
                            <strong>Checked By:</strong>
                            <span></span>
                            <strong>Date:</strong>
                            <span></span>
                        </div>
                        <div class="signature-line">
                            <strong>Passed By:</strong>
                            <span></span>
                            <strong>Date:</strong>
                            <span></span>
                        </div>
                    </div>
                </div>
            </div>
        </template>

        <template id="report_payment_voucher_invoice_template">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="o">
                    <t t-call="naseni_payment_voucher.report_payment_voucher_invoice_document"
                    />
                    <!-- <t t-call="naseni_payment_voucher.report_payment_voucher_invoice_document"
                        t-lang="o.lang" /> -->
                </t>
            </t>
        </template>

        <!-- <report
            id="action_report_payment_voucher_invoice"
            model="account.move"
            string="Payment Voucher (from Invoice)"
            report_type="qweb-pdf"
            name="naseni_payment_voucher.report_payment_voucher_invoice_template"
            file="naseni_payment_voucher.report_payment_voucher_invoice_template"
            print_report_name="(object.name)"
            paperformat="naseni_payment_voucher.paperformat_payment_voucher"
        /> -->

        <record id="action_report_payment_voucher_invoice" model="ir.actions.report">
            <field name="model">account.move</field>
            <field name="name">Payment Voucher (from Invoice)</field>
            <field name="report_type">qweb-pdf</field>
            <field name="report_name">naseni_payment_voucher.report_payment_voucher_invoice_template</field>
            <field name="report_file">naseni_payment_voucher.report_payment_voucher_invoice_template</field>
            <field name="print_report_name">(object.name)</field>
            <field name="binding_model_id" ref="account.model_account_move" />
            <field name="binding_type">report</field>
            <field name="paperformat_id" ref="naseni_payment_voucher.paperformat_payment_voucher" />
        </record>

    </data>
</odoo>