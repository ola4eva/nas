<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <template id="payment_voucher_template">
        <t t-call="web.external_layout">
            <main>
                <div class="oe_structure">
                    <t t-foreach="docs" t-as="doc">
                        <div class="page">
                            <h2 style="text-align:center;">PAYMENT VOUCHER</h2>
                            <p>
                                <strong>Invoice No:</strong>
                                <t t-esc="doc.name" />
                            </p>
                            <p>
                                <strong>Date:</strong>
                                <t t-esc="doc.invoice_date" />
                            </p>
                            <p>
                                <strong>Partner:</strong>
                                <t t-esc="doc.partner_id.name" />
                            </p>
                            <p>
                                <strong>Description:</strong>
                                <t
                                    t-esc="doc.invoice_line_ids[0].name if doc.invoice_line_ids else ''" />
                            </p>
                            <p>
                                <strong>Debit:</strong>
                                <t
                                    t-esc="doc.amount_total_signed if doc.move_type == 'out_invoice' else ''" />
                            </p>
                            <p>
                                <strong>Credit:</strong>
                                <t
                                    t-esc="doc.amount_total_signed if doc.move_type == 'in_invoice' else ''" />
                            </p>
                            <p>
                                <strong>Amount:</strong>
                                <t t-esc="doc.amount_total" />
                            </p>
                            <p>
                                <strong>Amount in Words:</strong>
                                <t t-esc="doc.currency_id.amount_to_text(doc.amount_total)" />
                            </p>
                            <p>
                                <strong>Prepared By:</strong>
                                <t t-esc="doc.create_uid.name" />
                            </p>
                            <p>
                                <strong>Internal Audit:</strong>
                                <!-- <t t-esc="doc.internal_audit_id.name if doc.internal_audit_id
                                else ''" /> -->
                            </p>
                            <p>
                                <strong>Checked By:</strong>
                                <!-- <t t-esc="doc.checked_by_id.name if doc.checked_by_id else ''"
                                /> -->
                            </p>
                            <p>
                                <strong>Passed By:</strong>
                                <!-- <t t-esc="doc.passed_by_id.name if doc.passed_by_id else ''" /> -->
                            </p>
                            <p>
                                <strong>Approved By:</strong>
                                <!-- <t t-esc="doc.approved_by_id.name if doc.approved_by_id else
                                ''" /> -->
                            </p>
                        </div>
                    </t>
                </div>
            </main>
        </t>
    </template>
</odoo>