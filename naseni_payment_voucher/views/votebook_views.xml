<odoo>
  <data>

    <record id="view_move_form" model="ir.ui.view">
      <field name="name">account.move.view.form.inherit</field>
      <field name="model">account.move</field>
      <field name="inherit_id" ref="account.view_move_form" />
      <field name="arch" type="xml">
        <xpath expr="//header" position="inside">
          <button name="action_submit" type="object" string="Submit to HOD" class="oe_highlight"
            invisible="state != 'draft'" />
          <button name="action_checking" type="object" string="Checking" class="oe_highlight"
            invisible="state != 'submit'" />
          <button name="action_audit" type="object" string="Audit" class="oe_highlight"
            invisible="state != 'checking'" />
        </xpath>
        <xpath expr="//header//button[@name='action_post'][1]" position="attributes">
          <attribute name="invisible">state != 'audit' or hide_post_button or move_type != 'entry'</attribute>
        </xpath>
        <xpath expr="//header//field[@name='state']" position="attributes">
          <attribute name="statusbar_visible">draft,posted,submit,checking,audit</attribute>
        </xpath>
        <xpath expr="//header//button[@name='action_post'][last()]" position="attributes">
          <attribute name="invisible">(state != 'audit' or hide_post_button or move_type == 'entry' or display_inactive_currency_warning)</attribute>
        </xpath>
        <xpath expr="//sheet//group" position="inside">
          <group name="prepare_info" invisible="preparer_id == False" readonly="True">
            <field name="preparer_id" readonly="1"/>
            <field name="prepared_on" readonly="1" />
          </group>
          <group>
            <field name="checker_id" readonly="1"/>
            <field name="checked_on" readonly="1"/>
          </group>
          <group>
            <field name="auditor_id" readonly="1"/>
            <field name="audited_on" readonly="1"/>
          </group>
        </xpath>
      </field>
    </record>

    <menuitem name="Votebook" id="naseni_payment_voucher.votebook"
      action="account_budget.act_budget_analytic_view"
      web_icon="naseni_payment_voucher,static/description/icon.png" />

  </data>
</odoo>