<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="naseni_hr_tax_view_list" model="ir.ui.view">
        <field name="name">naseni.hr.tax.view.list</field>
        <field name="model">naseni_hr.tax</field>
        <field name="arch" type="xml">
            <list string="TAX">
                <field name="name" />
            </list>
        </field>
    </record>

    <record id="naseni_hr.tax_view_form" model="ir.ui.view">
        <field name="name">naseni_hr.tax.view.form</field>
        <field name="model">naseni_hr.tax</field>
        <field name="arch" type="xml">
            <form string="">
                <sheet>
                    <group>
                        <div class="oe_title">
                            <h3>
                                <field name="name" placeholder="Lagos, FCT etc..." required="1" />
                            </h3>
                        </div>
                        </group>
                </sheet>
                <chatter />
            </form>
        </field>
    </record>

    <record id="naseni_hr_tax_action" model="ir.actions.act_window">
        <field name="name">Tax State</field>
        <field name="res_model">naseni_hr.tax</field>
        <field name="view_mode">list,form</field>
        <field name="domain">[]</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="oe_no_content_create">Click to create a new Tax State.</p>
        </field>
    </record>

    <menuitem
        id="naseni_hr.tax_menu"
        name="Tax State"
        action="naseni_hr_tax_action"
        parent="hr.menu_human_resources_configuration"
        sequence="10" />
</odoo>