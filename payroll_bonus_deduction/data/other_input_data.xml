            <field name="code">OSPF</field>
            <field name="internal_type">bonus</field>
            <field name="state">draft</field>
            <field name="note">This is reward for outstanding performance at duty.</field>
        </record>

        <record id="other_input_punctuality" model="payroll.otherinput.type">
            <field name="name">Punctuality</field>
            <field name="code">PUTY</field>
            <field name="internal_type">bonus</field>
            <field name="state">draft</field>
