            <field name="state">draft</field>
            <field name="note">This is the penalty for lateness to work/official duty.</field>
        </record>

        <record id="other_input_damages" model="payroll.otherinput.type">
            <field name="name">Damages</field>
            <field name="code">DMGS</field>
