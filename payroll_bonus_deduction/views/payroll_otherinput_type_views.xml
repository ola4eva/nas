<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <data>

        <record id="payroll_otherinput_type_view_list" model="ir.ui.view">
            <field name="name">payroll.otherinput.type.view.list</field>
            <field name="model">payroll.otherinput.type</field>
            <field name="arch" type="xml">
                <list string="Type of Input">
                    <field name="name"/>
                    <field name="internal_type" invisible="1"/>
                    <field name="code"/>
                    <field name="note"/>
                    <field name="state"/>
                </list>
            </field>
        </record>

        <record id="payroll_otherinput_type_view_form" model="ir.ui.view">
            <field name="name">payroll.otherinput.type.view.form</field>
            <field name="model">payroll.otherinput.type</field>
            <field name="arch" type="xml">
                <form string="Other Inputs">
                    <header>
                        <button name="action_confirm" string="Confirm" type="object" class="oe_highlight" invisible="state != 'draft'" />
                        <field name="state" widget="statusbar" />
                    </header>
                    <sheet>
                        <group>
                            <group>
                                <field name="name"/>
                            </group>
                            <group>
                                <field name="code" />
                                <field name="internal_type" invisible="1"/>
                            </group>
                            <group>
                                <label for="note">Description</label>
                                <div>
                                    <field name="note" />
                                </div>
                            </group>
                        </group>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" groups="base.group_user"/>
                        <field name="activity_ids"/>
                        <field name="message_ids"/>
                    </div>
                </form>
            </field>
        </record>

        <record id="payroll_otherinput_type_view_search" model="ir.ui.view">
            <field name="name">payroll.otherinput.type.view.search</field>
            <field name="model">payroll.otherinput.type</field>
            <field name="arch" type="xml">
                <search string="Payroll Input Type">
                    <field name="name"/>
                    <field name="code"/>
                    <field name="note"/>
                    <field name="state"/>
                </search>
            </field>
        </record>

        <record id="payroll_otherinput_type_deduction_action" model="ir.actions.act_window">
            <field name="name">Deduction Types</field>
            <field name="res_model">payroll.otherinput.type</field>
            <field name="view_mode">list,form</field>
            <field name="domain">[('internal_type', '=', 'deduction')]</field>
            <field name="context">{
                "default_internal_type": "deduction"
            }</field>
            <field name="help" type="html">
                <p class="oe_no_content_create">Click to create a new record.</p>
            </field>
        </record>

        <record id="payroll_otherinput_type_bonus_action" model="ir.actions.act_window">
            <field name="name">Bonus Types</field>
            <field name="res_model">payroll.otherinput.type</field>
            <field name="view_mode">list,form</field>
            <field name="domain">[('internal_type', '=', 'bonus')]</field>
            <field name="context">{
                "default_internal_type": "bonus"
            }</field>
            <field name="help" type="html">
                <p class="oe_no_content_create">Click to create a new record.</p>
            </field>
        </record>

        <menuitem id="payroll_other_input_root_menu" name="Bonuses/Deductions" parent="hr_payroll.menu_hr_salary_configuration" sequence="20" />
        <menuitem id="payroll_other_input_type_bonus_menu" name="Bonuses" parent="payroll_other_input_root_menu" action="payroll_otherinput_type_bonus_action" sequence="1"/>
        <menuitem id="payroll_other_input_type_deduction_menu" name="Deductions" parent="payroll_other_input_root_menu" action="payroll_otherinput_type_deduction_action" sequence="2"/>

    </data>

</odoo>
