<odoo>
    <record id="view_payroll_advice_wizard_form" model="ir.ui.view">
        <field name="name">payroll.advice.wizard.form</field>
        <field name="model">payroll.advice.wizard</field>
        <field name="arch" type="xml">
            <form string="Generate Payroll Advice Spreadsheet">
                <group>
                    <field name="file_name" readonly="0" />
                    <field name="file_data" filename="file_name" widget="binary" invisible="1"/>
                </group>
                <footer>
                    <button name="generate_payroll_advice" string="Generate" type="object"
                        class="btn-primary" />
                    <button
                        string="Cancel" class="btn-secondary" special="cancel" />
                </footer>
            </form>
        </field>
    </record>
</odoo>